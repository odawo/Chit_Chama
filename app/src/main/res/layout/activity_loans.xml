<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.vanessa.mychama.Loans">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Loans"
        android:textSize="20sp"
        android:textColor="#0f2a3c"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <!--<ImageView-->
            <!--android:id="@+id/newloan_img"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="20dp"-->
            <!--android:background="@drawable/ic_local_atm_black_24dp"/>-->

        <TextView
            android:id="@+id/newloan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="new loan application"
            android:textColor="#0f2a3c"
            android:padding="20dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/arrears"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newloan"
            android:text="loan arrears : make this a drop down"
            android:textColor="#0f2a3c"
            android:padding="20dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/requests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/arrears"
            android:text="new loan requests : open page with loan requests info.. "
            android:padding="20dp"
            android:textColor="#0f2a3c"
            android:clickable="true"/>

    </RelativeLayout>



</RelativeLayout>
